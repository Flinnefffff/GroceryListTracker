<Window x:Class="Grocery_List_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Grocery List Tracker" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Grocery List Tracker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>

        <!-- Sign up button -->
        <Button Content="Sign Up" Grid.Row="1" HorizontalAlignment="Center" Padding="10,5" Width="120" Click="SignUp_Click" Background="Black" Foreground="White" BorderBrush="Black" BorderThickness="1"/>

        <!-- Already have an account? Login button -->
        <TextBlock Text="Already have an account?" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,5"/>
        <Button Content="Login" Grid.Row="2" HorizontalAlignment="Center" Padding="10,5" Width="120" Click="Login_Click" Background="Black" Foreground="White" BorderBrush="Black" BorderThickness="1" Margin="0,32,0,-32"/>
    </Grid>
</Window>
